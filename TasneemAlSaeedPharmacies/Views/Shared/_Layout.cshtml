<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TasneemAlSaeedPharmacies</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Train+One&display=swap" rel="stylesheet">
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TasneemAlSaeedPharmacies.styles.css" asp-append-version="true" />
    <style>
        .dropdown-item:hover {
            background-color: #f2f2f2; /* لون الخلفية عند التمرير */
            color: #007bff; /* تغيير لون النص عند التمرير إلى اللون الأزرق */
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand text-white train-one-regular" asp-area="" asp-controller="Home" asp-action="Index">
                    Tasneem Al-Saeed
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">offers</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Categories</a>
                            <div class="dropdown-menu" style="background-color: #f8f9fa;">
                                <a class="dropdown-item text-dark" href="#">Cosmetics</a>
                                <a class="dropdown-item text-dark" href="#">Hair Care</a>
                                <a class="dropdown-item text-dark" href="#">Every Day Essentials</a>
                                <a class="dropdown-item text-dark" href="#">Medical Equipment & Supplies</a>
                                <a class="dropdown-item text-dark" href="#">Mom & Baby</a>
                                <a class="dropdown-item text-dark" href="#">Sexual Health</a>
                                <a class="dropdown-item text-dark" href="#">Medicine</a>
                                <a class="dropdown-item text-dark" href="#">Skin Care</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item text-dark" href="#">another</a>
                            </div>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Support</a>
                            <div class="dropdown-menu" style="background-color: #f8f9fa;">
                                <a class="dropdown-item text-dark" href="mailto:moyassin2252004@gmail.com?subject=Complaint&body=Dear Support,">
                                    <i class="fas fa-envelope"></i> Complaints
                                </a>
                                <a class="dropdown-item text-dark" href="tel:12221" onclick="return confirm('سيتم الاتصال بخدمة العملاء على الرقم 01060512789. هل تريد المتابعة؟')">
                                    <i class="fas fa-headset"></i> Contact Support (01060512789)
                                </a>
                            </div>
                        </li>

                    </ul>

                    <form class="d-flex w-100">
                        <input class="form-control me-2 fw-bold text-dark border border-secondary fs-7"
                               type="search"
                               placeholder="Search"
                               style="background-color: #f8f9fa; width: 40%;">
                        <button class="btn btn-primary text-white fw-bold fs-7" style="text-transform: none;" type="submit">Search</button>
                    </form>

                </div>
            </div>
        </nav>

    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <a asp-area="" asp-controller="Home" asp-action="Privacy"></a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
